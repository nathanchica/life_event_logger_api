{
    "functions": {
        "api/graphql.ts": {
            "maxDuration": 10
        }
    },
    "headers": [
        {
            "source": "/api/graphql",
            "headers": [
                { "key": "Access-Control-Allow-Origin", "value": "$CLIENT_URL" },
                { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
                { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
            ]
        }
    ]
}
